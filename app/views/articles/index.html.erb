<h2>All articles</h2>

<% @articles.each do |article| %>
  <%= link_to article.title, article_path(article) %>
  <p><%= article.content %></p>
  <%= link_to 'Delete article', article_path(article), method: :delete %>
  <p>--------</p>
<% end %>

<%= link_to 'Create a new article', new_article_path %>
