<h2 class="text-center">All articles</h2>

<div class="container">
  <div class="row">
    <% @articles.each do |article| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.1)), url('https://i0.wp.com/www.slashfilm.com/wp/wp-content/images/lord-of-the-rings-tv-show.jpg');">
        <div class = "card-title"><%= link_to article.title, article_path(article) %>
        </div>
        <div class = "card-content">
          <p><%= article.content %></p>
        </div>
        <%= link_to article_path(article), class: 'btn btn-danger btn-sm', method: :delete do %>
          <p>Delete</p>
        <% end %>

      </div>
    </div>
    <% end %>
  </div>
</div>

<%= link_to 'Create a new article', new_article_path %>
